@{
    ViewData["Title"] = "Create or Edit an Expense";
}

@model SpendSmart.Models.Expense

<div class="text-center">
    <h1 class="display-4">Create or Edit Expenses</h1>
</div>

<form asp-action="CreateEditExpenseForm" asp-asp-controller="Home">

    <input hidden class="form-control" type ="number" placeholder="0" asp-for="Id"/>
    <!--  asp-for is for the Id present in model that we have imported namely - Expense-->
    <label class="mt-4">Value($)</label>
    <input class="form-control" type="number" placeholder="0" asp-for="Value" step="1" />

    <label class="mt-4">Description</label>
    <input class="form-control" type="text" placeholder="Add a description" asp-for="Description" />

    <button class="btn btn-primary mt-4" type="submit">Ok</button>
</form>