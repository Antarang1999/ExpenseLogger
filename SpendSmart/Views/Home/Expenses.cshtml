@{
    ViewData["Title"] = "Expense Tracker";
}

@model List<Expense>

<div class="text-center">
    <h1 class="display-4">This is the expense tracking page</h1>
    <br />
    <br />
    <br />

    <h3>Total expenses $@ViewBag.Expenses</h3>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Value
                </th>
                <th>
                    Description
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach(var expense in Model)
                {
                    <tr>
                        <td>@expense.Id</td>
                        <td>@expense.Value</td>
                        <td>@expense.Description</td>
                        <td>
                        <a asp-action="CreateEditExpense" asp-route-id="@expense.Id">Edit</a>
                        <a asp-action="DeleteExpense"  asp-route-id="@expense.Id">Delete</a>
                        </td>
                       
                    </tr>
                }
            }
        </tbody>
    </table>
    <a asp-action="CreateEditExpense" class="btn btn-primary mt-4">Add an Expense</a>
</div>
